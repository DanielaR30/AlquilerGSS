@model IEnumerable<AlquilerGSS.PocoClass.DetalleAlquiler>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Alquileres</h1>

<form asp-action="index">

    <div class="form-row">
        <div class="form-group col-md-1">
            <label class="control-label">Filtrar por fecha</label>
        </div>
        <div class="form-group col-md-2">
            <input type="date" class="form-control text-right" name="finicio" value="@ViewBag.finicio" />
        </div>
        <div class="form-group col-md-2">
            <input type="date" class="form-control text-right" name="ffin" value="@ViewBag.ffin" />
        </div>
        <div class="form-group col-md-2">
            <input type="submit" class="btn btn-primary" value="Consultar" />
        </div>
    </div>

</form>

    <table class="table">
        <thead>
            <tr>
                <th>Cédula</th>
                <th>Nombre</th>
                <th>Fecha alquiler</th>
                <th>Tiempo alquilado</th>
                <th>Saldo</th>
                <th>Placa</th>
                <th>Marca</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cedulacliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombrecliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dias)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Saldo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Placacarro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marcacarro)
                    </td>

                </tr>
            }
        </tbody>
    </table>









